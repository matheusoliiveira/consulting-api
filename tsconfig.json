{
  "compilerOptions": {
    /* Configurações de Linguagem e Compilação */
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    /* Rigor de Tipagem */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Configurações Cruciais para TypeORM (Decorators) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Suporte para Node.js moderno */
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}